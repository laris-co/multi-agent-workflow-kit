# shellcheck shell=bash

# Point TMUX_CONF to the repo copy so auxiliary scripts can reuse it.
export TMUX_CONF="$PWD/.tmux.conf"

# If we are already inside a tmux session, reload the configuration automatically.
if [[ -n "${TMUX:-}" ]] && command -v tmux >/dev/null 2>&1; then
  tmux source-file "$TMUX_CONF" >/dev/null 2>&1 || true
fi
